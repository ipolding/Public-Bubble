# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#Content Creation
POST   /create/event                controllers.Application.save
GET    /create/event                controllers.Application.createEvent
GET    /update/event/:id            controllers.Application.updateEvent(id : Int)
GET    /delete/event/:id            controllers.Application.deleteEvent(id : Int)
POST   /upload/picture          controllers.Application.uploadImage

# Home page
GET    /                           controllers.Application.index
GET    /blog                       controllers.Application.blog
GET    /events/all                 controllers.Application.eventsJson
GET    /events                     controllers.Application.events
GET    /twitter                    controllers.Application.twitter

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file               controllers.Assets.at(path="/public", file)