# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

POST   /create/event                controllers.Events.save
GET    /create/event                controllers.Events.createEvent
GET    /update/event/:id            controllers.Events.updateEvent(id : Int)
GET    /delete/event/:id            controllers.Events.deleteEvent(id : Int)

# Home page
GET    /                           controllers.Application.index
GET    /blog                       controllers.Application.blog
GET    /events/all                 controllers.Application.eventsJson
GET    /events                     controllers.Application.events
GET    /twitter                    controllers.Application.twitter

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file               controllers.Assets.at(path="/public", file)